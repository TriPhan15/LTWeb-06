<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css/style.css")
    <link rel="stylesheet" href="css/style.css">
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <!-- Bootstrap 5 CSS (bản mới, tương thích MVC4) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    @Scripts.Render("~/bundles/modernizr")
    <script src="js/script.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</head>
<body>
    <header>
        <div class="container">
            <div class="header-content">
                <div class="logo"></div>
                <nav>
                    @using _2001230977_PhanThanhTri_Buoi06.Models
                    @{
                        KhachHang kh = Session["KhachHang"] as KhachHang;
                    }

                    <ul>
                        <li>@Html.ActionLink("Home", "Index", "Sach")</li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="thongTinDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Thông tin
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="thongTinDropdown">
                                <li>@Html.ActionLink("Danh sách sản phẩm", "Xuat_SanPham_Loai", "Sach", null, new { @class = "dropdown-item" })</li>
                                <li>@Html.ActionLink("Tìm kiếm theo loại", "TimKiemTheoLoai", "Sach", null, new { @class = "dropdown-item" })</li>
                                <li>@Html.ActionLink("Tìm kiếm theo giá", "TimKiemTheoGia", "Sach", null, new { @class = "dropdown-item" })</li>
                            </ul>
                        </li>

                        <li>@Html.ActionLink("Lịch sử giao dịch", "LichSuGiaoDich", "Sach")</li>
                        
                        @if (kh != null)
                        {
                            <li style="margin-left:20px; color:white;">
                                <strong>@kh.tenkhachhang</strong> 
                            </li>
                            <li class="btn btn-logout">
                                @Html.ActionLink("Đăng xuất", "Logout", "Sach")
                            </li>
                        }
                        else
                        {
                           <li>@Html.ActionLink("Đăng nhập", "Login", "Sach", new { @class = "btn btn-outline-light me-2" }) </li>
                           <li>@Html.ActionLink("Đăng ký", "Register", "Sach", new { @class = "btn btn-success" })</li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    </header>

    <!-- Main Content Section -->
    <main>
        <div class="container">
           
             @RenderBody()

        </div>
    </main>
    <!-- Footer Section -->
    <footer>
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h3>Thông Tin Liên Hệ</h3>
                    <p>Địa chỉ: 123 Đường ABC, Quận XYZ, TP. Hồ Chí Minh</p>
                    <p>Điện thoại: (0123) 456-789</p>
                    <p>Email: contact@example.com</p>
                </div>
                <div class="footer-section">
                    <h3>Liên Kết Nhanh</h3>
                    <a href="#">Trang Chủ</a>
                    <a href="#">Giới Thiệu</a>
                    <a href="#">Dịch Vụ</a>
                    <a href="#">Sản Phẩm</a>
                </div>
                <div class="footer-section">
                    <h3>Theo Dõi Chúng Tôi</h3>
                    <a href="#">Facebook</a>
                    <a href="#">Twitter</a>
                    <a href="#">Instagram</a>
                    <a href="#">LinkedIn</a>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2023 Tên Công Ty. Tất cả các quyền được bảo lưu. | Phát triển bởi Nhóm Phát Triển</p>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>




