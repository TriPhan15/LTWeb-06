@{
    ViewBag.Title = "Login";
}
<main>
    <div class="container">
        <div class="form-container">
            <h2 class="form-title">Đăng Nhập</h2>
            <form id="loginForm" action="/Sach/Login" method="post">
                <div class="form-group">
                    <label for="loginEmail">SĐT</label>
                    <input type="number" id="loginPhone" name="phone" required>
                </div>
                <div class="form-group">
                    <label for="loginPassword">Mật khẩu</label>
                    <input type="password" id="loginPassword" name="password" required>
                </div>
                <button type="submit" class="form-button">Đăng Nhập</button>
            </form>
            <div class="form-footer">
                <p>Chưa có tài khoản? <a href="#" onclick="showPage('register')">Đăng ký ngay</a></p>
            </div>
        </div>
    </div>
</main>

@if (ViewBag.Message != null && ViewBag.Message == "FAILURE")
{

    <script>alert("Đăng nhập không thành công!!!");</script>
}
